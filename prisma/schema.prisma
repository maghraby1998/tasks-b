// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Project {
  id         Int           @id @default(autoincrement())
  name       String
  created_at DateTime
  users      ProjectUser[]
  stages     Stage[]
  tasks      Task[]
}

model Stage {
  id        Int     @id @default(autoincrement())
  name      String
  order     Int
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
  tasks     Task[]
}

model ProjectUser {
  id        Int     @id @default(autoincrement())
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}

model User {
  id       Int           @id @default(autoincrement())
  name     String
  password String
  email    String        @unique
  tasks    UserTask[]
  projects ProjectUser[]
}

model Task {
  id         Int        @id @default(autoincrement())
  name       String
  created_at DateTime
  users      UserTask[]
  projectId  Int
  project    Project    @relation(fields: [projectId], references: [id])
  stageId    Int
  stage      Stage      @relation(fields: [stageId], references: [id])
}

model UserTask {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
  taskId Int
  task   Task @relation(fields: [taskId], references: [id])
}
