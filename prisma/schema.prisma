// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id                 Int                  @id @default(autoincrement())
  name               String
  created_at         DateTime?            @default(now())
  users              User[]               @relation("UserProjects")
  stages             Stage[]
  tasks              Task[]
  projectInvitations ProjectInvitations[]
}

model Stage {
  id        Int     @id @default(autoincrement())
  name      String
  order     Int
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
  tasks     Task[]
  color     String
}

model User {
  id                 Int                  @id @default(autoincrement())
  name               String
  password           String
  email              String               @unique
  email_verified     Int                  @default(0)
  tasks              Task[]               @relation("TaskAssignees")
  projects           Project[]            @relation("UserProjects")
  invitationsSent    ProjectInvitations[] @relation(name: "sender")
  InvitationReceived ProjectInvitations[] @relation(name: "receiver")
  createdTasks       Task[]               @relation("TaskCreator")
  notifications      Notification[]
}

model Task {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  created_at  DateTime?  @default(now())
  assignees   User[]     @relation("TaskAssignees")
  projectId   Int
  project     Project    @relation(fields: [projectId], references: [id])
  stageId     Int
  stage       Stage      @relation(fields: [stageId], references: [id])
  created_by  Int
  creator     User       @relation("TaskCreator", fields: [created_by], references: [id])
  documents   Document[]
}

model ProjectInvitations {
  id         Int     @id @default(autoincrement())
  senderId   Int
  sender     User    @relation(fields: [senderId], references: [id], name: "sender")
  receiverId Int
  receiver   User    @relation(fields: [receiverId], references: [id], name: "receiver")
  projectId  Int
  project    Project @relation(fields: [projectId], references: [id])
  status     String
}

model Document {
  id         Int       @id @default(autoincrement())
  name       String
  path       String
  taskId     Int
  task       Task      @relation(fields: [taskId], references: [id])
  created_at DateTime? @default(now())
}

model Notification {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  title      String
  message    String
  isRead     Boolean  @default(false)
  created_at DateTime @default(now())
}
